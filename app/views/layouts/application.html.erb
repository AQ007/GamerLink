<!DOCTYPE html>
<html>
  <head>
    <title>GamerLink</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <% if current_user %>  <%#...added if statement to add current user method for log in%>
      <header class= "nav navbar-nav-fixed-top navbar-inverse">
              <nav class="wrapper">
                <ul class= "nav-list">
                  <li><%= link_to("GamerLink", root_path, class: 'GamerLink') %></li>
                  <li><%= link_to("Games", games_path, class: 'Games') %></li>
                  <li><%= link_to("Tournaments", tournaments_path, class: 'Tournaments') %></li>
                  <li><%= link_to("Players", users_path, class: 'Players') %></li>
                  <li><%= link_to("New Tournament", tournaments_new_path, class: 'NewTournament') %></li>
                  <% if current_user %>
                    <li><%= link_to("Log Out", logout_path, method: "delete" )%></li>
                  <% end %>
                </ul>
              </nav>

      </header>
    <%end%>
    <div class="container">
      <%= yield %>
    </div>
  </body>
  </html>
