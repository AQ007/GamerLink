<div class="table-title">
  <h3>
    <%= @user.username %>
  </h3>
</div>


<table class="table-fill">
  <thead>
    <tr>
      <th class="text-left">Tournament Name</th>
     </tr>
  </thead>

  <tbody class="table-hover">
    <% @user.tournaments.each do |tourny| %>
      <tr>
        <td class="text-left">
          <%=link_to tourny.name, tourny %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
